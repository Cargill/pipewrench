{% macro create_field(conf, column) -%}
    {% set mapped_type = map_datatypes(conf, column).avro %}
    {%- if mapped_type == 'decimal' %}
       "name": "{{ column.name }}",
        "type": "bytes",
        "logicalType": "decimal",
        "precision": {{ column.precision }},
        "scale": {{ column.scale }}
    {% else %}
        "name": "{{ column.name }}",
        "type": "{{ mapped_type }}"
    {% endif %}
{%- endmacro -%}
{
     "type": "record",
     "namespace": "com.example",
     "name": "{{ table.id }}",
     "fields": [
      {% for column in table.columns -%}
       { {{ create_field(conf, column) }} }{% if not loop.last %},{% endif %}
      {% endfor -%}
   ]
}

